.map {
  width: 100%;
  height: 100%;
}

.control-btn {
  position: absolute;
  height: 40px;
  width: 40px;
  z-index: 99;
  background: #FFF;
  line-height: 35px;
  font-size: 30px;
  text-align: center;
  border-radius: 4px;
  right: 10px;
}

.control-btn-increase {
  bottom: 122px;
}

.control-btn-decrease {
  bottom: 72px;
}
.focus-btn {
  position: absolute;
  height: 40px;
  width: 40px;
  z-index: 99;
  background: #FFF;
  line-height: 35px;
  font-size: 30px;
  text-align: center;
  border-radius: 4px;
  left: 10px;
}
.focus-btn-decrease {
  bottom: 72px;
}